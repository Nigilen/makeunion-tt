extends ../layouts/default.pug

block variables
  - var pageStylesheet = "./styles/user-details.css";
  - var pageScript = "./scripts/users.js";
  - var userDetails = "./scripts/user-details.js";

block content
  include ../components/header/header
  main.main
    div.title-wrapper
      h1.page-title Пользователь Noname
      a(href="./users.html").back-link
        img(src="./images/back.svg", alt="Вернуться к списку пользователей")
    section.user-about
      picture.user-avatar 
        source(type="image/avif" media="(width <= 375px)" srcset="./images/test-avatar-m.avif")
        source(type="image/avif" srcset="./images/test-avatar-d.avif")
        source(type="image/webp" media="(width <= 375px)" srcset="./images/test-avatar-m.webp")
        source(type="image/webp" srcset="./images/test-avatar-d.webp")
        source(type="image/png" media="(width <= 375px)" srcset="./images/test-avatar-m.png")
        img(src="./images/test-avatar-d.png" width="620" height="620" alt="Аватар пользователя Ванилопа" loading="lazy").user-avatar-img
      dl.user-info-list
        div.user-info-item.user-info-list--name
          dt.info-item-term Имя
          dd.info-item-desc Ванилопа фон Кекс 
        div.user-info-item.user-info-list--bd
          dt.info-item-term День рождения
          dd.info-item-desc 10.10.2002
        div.user-info-item.user-info-list--address
          dt.info-item-term Адрес
          dd.info-item-desc Anytown, 123 Main Street, Apt. 4, 
        div.user-info-item.user-info-list--email
          dt.info-item-term Почта
          dd.info-item-desc 
            a(href="vaniagluk@yandex.ru" type="mail").info-item-link vaniagluk@yandex.ru
        div.user-info-item.user-info-list--phone
          dt.info-item-term Телефон
          dd.info-item-desc 
            a(href="+79521179309" type="phone").info-item-link +7 (952) 117-93-09
        div.user-info-item.user-info-list--company
          dt.info-item-term Компания
          dd.info-item-desc ABC Company
  include ../components/footer/footer